property newServerAcceptRef  ${nukleus:newRouteRef()} # external

property serverAccept "nukleus://tls/streams/source"

accept "nukleus://tls/streams/source"
  option nukleus:route  ${newServerAcceptRef}
  option nukleus:window 65536
  option nukleus:transmission "duplex"
accepted
connected

## Write the request bytes for connecting with no-authentication
read [0x05 0x01 0x00]

## Read the response, expect success
write [0x05 0x00]

## Write CONNECT request
#TODO Length and address type are wrong
read [0x05 0x01 0x00 0xFE 0x00 0x00 0x00 0x0A] "tcp://foo" [0x00 0x00 0x00]

## Read CONNECT response
#TODO Length and address type are wrong
write [0x05 0x00 0x00 0xFE 0x00 0x00 0x00 0x0A] "tcp://foo" [0x00 0x00 0x00]

read "hello world"

write "hello client"
